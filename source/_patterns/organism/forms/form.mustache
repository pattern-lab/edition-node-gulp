<form class="organism-page">
	<div class="title-bar">
		<h2>Message Type <span>ID</span></h2>
	</div>
	<div class="static-info row">
		<!-- Message info, like time & date stamps, go here -->
		<div class="col-xs-12 col-sm-6 col-md-4">
			{{> molecules-textbox}}
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="staging-content">
		<fieldset>
			<div class="form-section row">
				<div class="col-sm-6 col-nested"> <!-- 2/3 at high res -->
					<div class="col-lg-6">
						<h3 class="form-group-title">Title</h3>
						<!-- See below for form groups -->
						{{> molecules-datepicker}}
						{{> molecules-dropdown}}
					</div>
					<div class="col-lg-6">
						{{> molecules-textbox}}
						{{> molecules-textboxmonetary}}
					</div>
				</div><!-- /end .col-sm-6 .col-nested -->
				<div class="col-sm-6 col-unnested"><!-- 1/3 at high res -->
					{{> molecules-radio}}
					{{> molecules-checkbox}}
				</div><!-- /end .col-sm-6 .col-unnested -->
				<div class="clearfix"></div>
			</div><!-- /end .form-section .row -->
			<!-- stack form-sections to split up tables from forms or to break up massive forms by similar content -->
			<div class="form-group button-group">
				{{> molecules-submit-section}}
			</div>
		</fieldset>
	</div><!--end .staging-content -->
</form>
